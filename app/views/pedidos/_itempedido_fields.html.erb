<div class="nested-fields" style="border-top: solid gray .01px;margin-top: 10px;">
    <%= f.hidden_field :_destroy %>

  <div class="row">

    <div class="field col-sm-4">
      <%= f.label :produto_id, style: "display: block" %>
      <%= f.select :produto_id, 
            options_for_select(Produto.all.map { |r| [ r.name,  r.id] },
             f.object.produto_id), {}, class: 'form-control form-select' %>

    </div>

    <div class="field col-sm-5">
        <%= f.label :valor, style: "display: block" %>
        <%= f.text_field :valor %>
    </div>

    <div class="field col-sm-2">
      <%= link_to 'Remove', '#', class: 'remove_fields' %>
    </div>

  </div>
  
</div>
